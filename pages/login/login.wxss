/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
}

.title {
  font-size: 32px;
  font-weight: bold;
  margin-top: 50px;
  color: #ffffff;
}

.subtitle {
  font-size: 24px;
  color: #ffffff;
  margin-bottom: 30px;
}

.input-box {
  display: flex;
  align-items: center;
  width: 80%;
  height: 40px;
  margin-bottom: 20px;
  background-color: white;
  border-radius: 5px;
  padding: 0 10px;
}

.clear-icon, .toggle-icon {
  width: 20px;
  height: 20px;
  margin-left: auto;
}

button{
  font-size: 24px;
}

.agreement {
  display: flex;
  align-items: center;
  margin-top: 20px;
}

.agreement text {
  font-size: 12px;
  color: #666;
}

.register-link {
  font-size: 14px;
  color: #1E90FF;
  margin-top: 20px;
  text-decoration: underline;
}
